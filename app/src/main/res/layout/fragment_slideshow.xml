<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- <com.braintreepayments.cardform.view.CardForm
         android:id="@+id/card_form"
         android:layout_width="match_parent"
         android:layout_height="match_parent"  />-->

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:orientation="horizontal"></LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="18"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical"></LinearLayout>

             <TextView
                 android:id="@+id/lblRealizarPago"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="2"
                 android:text="Realizar Pago\n¡Solo $100 al mes!"
                 android:textAlignment="center"
                 android:textColor="@color/md_black_1000"
                 android:textSize="24sp"
                 android:lines="2" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical">

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="2"
                 android:orientation="horizontal">

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="2"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/lblPropietario"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:text="Propietario"
                         android:textSize="18sp" />

                     <EditText
                         android:id="@+id/txtPropietario"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="2"
                         android:ems="10"
                         android:inputType="textPersonName" />

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/lblCodigoSeguridad"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:text="CVV"
                         android:textSize="18sp" />

                     <EditText
                         android:id="@+id/txtCodigoSeguridad"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="2"
                         android:ems="10"
                         android:inputType="number"
                         android:maxLength="3"/>

                 </LinearLayout>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical"></LinearLayout>

             <TextView
                 android:id="@+id/lblNumeroTarjeta"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:text="Numero de Tarjeta"
                 android:textSize="18sp" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="@dimen/mb_aspect_ratio_card_id1"
                 android:orientation="horizontal">

                 <EditText
                     android:id="@+id/txtNumeroTarjeta"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="3"
                     android:ems="10"
                     android:inputType="number"
                     android:maxLength="16" />

                 <ImageView
                     android:id="@+id/imgTipoTarjeta"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     tools:srcCompat="@drawable/logo_otro" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical"></LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="2"
                 android:orientation="horizontal">

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="3"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/lblFechaExpiración"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:text="Fecha de expiración"
                         android:textSize="18sp" />

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:orientation="horizontal">

                         <Spinner
                             android:id="@+id/cmbMes"
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="5" />

                         <TextView
                             android:id="@+id/lblSeparador"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:text="/"
                             android:textAlignment="center"
                             android:textSize="30sp" />

                         <Spinner
                             android:id="@+id/cmbAnio"
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="5" />

                     </LinearLayout>

                 </LinearLayout>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical"></LinearLayout>

             <Button
                 android:id="@+id/btnConfirmar"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="2"
                 android:text="Confirmar"
                 android:textSize="24sp" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical"></LinearLayout>

         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:orientation="horizontal"></LinearLayout>
     </LinearLayout>

</RelativeLayout>